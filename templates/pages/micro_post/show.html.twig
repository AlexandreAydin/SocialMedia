{% block body %}  
    <div class="container mt-4">

		{{ include('pages/micro_post/_post.html.twig', {post: post}) }}

	</div>

<div class=" container mt-4">
  {% for comment in post.comments %}
    <div class="my-2">
      <div class="d-flex align-items-center">
        <div class="mr-2">
          {# {{ include('shared/_avatar.html.twig', { profile: comment.author.userProfile, size: 8 }) }} #}
        </div>
        <div>
          <div class="font-weight-medium text-dark">
            <a href="{{path('app_profile',  { id: comment.author.id })}}" class="text-decoration-none text-dark">
             {{comment.author.email}}
            </a>
          </div>
          <div class="text-muted">{{ comment.createdAt | date("j M, Y")  }}</div>
        </div>
      </div>
      <div class="d-flex">
        <div class="ml-4 mr-6 pb-12 border {% if not loop.last %}border-light{% else %}border-0{% endif %}"></div>
        <div>{{ comment.text }}</div>
      </div>
    </div>
	<hr>
  {% endfor %}
</div>




{% endblock %}